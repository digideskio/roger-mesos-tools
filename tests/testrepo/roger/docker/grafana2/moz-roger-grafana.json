{
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{ image }}",
      "network": "BRIDGE",
      "parameters": [
        { "key": "log-driver", "value": "gelf" },
        { "key": "log-opt",    "value": "gelf-tag=grafana" },
        { "key": "log-opt",    "value": "gelf-address=udp://10.10.254.129:12201" }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 0,
          "servicePort": 0,
          "protocol": "tcp"
        }
      ]
    }
  },
  "id": "roger-grafana21",
  "instances": 1,
  "cpus": 0.5,
  "mem": 512,
  "uris": [],
  "env": {
    "TCP_PORTS": "{ \"3000\": \"PORT0\" }",
    "GF_SERVER_ROOT_URL": "http://grafana.roger.dal.moz.com:3000",
    "ENV_VAR_CONTAINER_PROD": "{{ environment_var_container_prod }}",
    "ENV_VAR_CONTAINER_DEV": "{{ environment_var_container_dev }}",
    "ENV_VAR_CONTAINER_STAGE": "{{ environment_var_container_stage }}",
    "GLOBAL_VAR_CONTAINER": "{{ global_var_container }}"

  }
}
