#!/usr/bin/python

from __future__ import print_function
import argparse
import json
import os
import sys

import contextlib

@contextlib.contextmanager
def chdir(dirname):
  '''Withable chdir function that restores directory'''
  curdir = os.getcwd()
  try:
    os.chdir(dirname)
    yield
  finally: os.chdir(curdir)

def parse_args():
  parser = argparse.ArgumentParser(description='To docker build,tag and push from provided directory.')
  parser.add_argument('app_name', metavar='app_name',
    help="Application to be built. example: 'agora' or 'grafana'")
  parser.add_argument('directory', metavar='directory',
    help="Directory that gets docker build. example: '/home/vagrant'")
  parser.add_argument('tag_name', metavar='tag_name',
    help="Image name to be tagged that includes version to be used in docker push. example: 'roger-collectd:0.20' or 'grafana:2.1.3'")
  parser.add_argument('config_file', metavar='config_file',
    help="Configuration file to be used for the project. example: 'content.json' or 'kwe.json'")
  return parser

def main():
  parser = parse_args()
  args = parser.parse_args()
  root = os.path.abspath(os.path.join(os.path.dirname(os.path.realpath(__file__)), '../'))
  with open('{0}/config/{1}'.format(root, args.config_file)) as config:
    config = json.load(config)

  with open('{0}/config/roger-env.json'.format(root)) as roger_env:
    roger_env = json.load(roger_env)

  if 'registry' not in roger_env:
   sys.exit('Registry not found in roger-env.json file.')

  if args.app_name not in config['apps']:
    sys.exit('Application specified not found.')

  common_repo = config.get('repo', '')
  data = config['apps'][args.app_name]
  repo = ''
  if common_repo != '':
    repo = data.get('repo', common_repo)
  else:
    repo = data.get('repo', args.app_name)

  projects = data.get('privateProjects', 'none')
  docker_path = data.get('path', 'none')

  # get/update target source(s)
  file_exists = True
  file_path = ''
  if docker_path != 'none':
    file_path = "{0}/{1}/{2}".format(os.path.abspath(args.directory), repo, docker_path)
  else:
    file_path = "{0}/{1}".format(os.path.abspath(args.directory), repo)

  file_exists = os.path.exists("{0}/Dockerfile".format(file_path))

  if file_exists:
    os.system("{0}/bin/docker-build '{1}' '{2}' '{3}' '{4}' '{5}'".format(root, os.path.abspath(args.directory), repo, projects, docker_path, args.tag_name))

    image = "{0}/{1}".format(roger_env['registry'], args.tag_name)
    os.system("docker tag -f {0} {1}".format(args.tag_name, image))
    os.system("docker push {0}".format(image))
    docker_message = "IMAGE {0} TAGGED AND PUSHED TO REGISTRY {1} COMPLETED".format(args.tag_name, roger_env['registry'])
    print(docker_message)
  else:
    print("Dockerfile does not exists in {0} dir:".format(file_path))

if __name__ == "__main__":
  main()
